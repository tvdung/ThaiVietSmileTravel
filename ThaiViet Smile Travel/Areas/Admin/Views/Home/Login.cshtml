
@model ThaiViet_Smile_Travel.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}
@{
    if (Session["UserId"] != null)
    {
        Response.Redirect(Url.Action("Index", "Home"));
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập vào trang quản trị</title>
    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/form-elements.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="assets/ico/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="assets/ico/apple-touch-icon-57-precomposed.png">
</head>
<body>
    <!-- Top content -->
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Đăng nhập vào quản trị</h3>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        @using (@Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-bottom">
                                @Html.ValidationSummary(true, null, new
                           {
                               @class = "alert alert-danger"
                           })
                                <form role="form" action="" method="post" class="login-form">
                                    <div class="form-group">
                                        <label class="sr-only">Tài khoản</label>
                                        @Html.TextBoxFor(x => x.UserName, new
                                        {
                                            @class = "form-username form-control",
                                            @placeholder = "vui lòng nhập tên tài khoản",
                                            @autofocus = "autofocus"
                                        })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only">Password</label>
                                        @Html.TextBoxFor(x => x.Password, new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Vui lòng nhập mật khẩu",
                                            @type = "password"
                                        })
                                        @*<div class="editor-label">
                                            @Html.CheckBoxFor(u => u.RememberMe)
                                            @Html.LabelFor(u => u.RememberMe)
                                        </div>*@
                                    </div>
                                    <button type="submit" class="btn" style="width: 100%;">Đăng nhập</button>
                                </form>
                            </div>
                        }}
</div>
</div>
</div>
</div>

</div>

<div class="backstretch" style="left: 0px; top: 0px; overflow: hidden; margin: 0px; padding: 0px;  z-index: -999999;">
    <img src="~/Areas/Admin/Content/img/bannerlogin.jpg" style="position: absolute; margin: 0px; padding: 0px; border: none; width: 1583px; height: 1055.33px; max-height: none; max-width: none; z-index: -999999; left: 0px; top: -281.667px;">
</div>
</body>
</html>