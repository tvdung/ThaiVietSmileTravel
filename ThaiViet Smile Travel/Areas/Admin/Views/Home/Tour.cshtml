@model IEnumerable<ThaiVietSmileTravel.Models.Framework.tbl_Tour>
@{
    ViewBag.Title = "Tour";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách tour</h2>

<div class="box-content">
    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TenTourVN)</th>
                <th>@Html.DisplayNameFor(model => model.HinhAnh)</th>
                <th>@Html.DisplayNameFor(model => model.DonGia)</th>
                <th>@Html.DisplayNameFor(model => model.SoNgay)</th>
                <th>@Html.DisplayNameFor(model => model.SoDem)</th>
                <th>@Html.DisplayNameFor(model => model.SoCho)</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model)
{
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTourVN)
                </td>
                <td class="center">
                    <img src="@item.HinhAnh" width="80" height="50" class="img-responsive center"/>
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.SoNgay)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.SoDem)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.SoCho)
                </td>
                <td class="center">
                    @if (item.IsActive)
                    {
                        <span class="label-success label label-default">Hiển thị</span>
                    }
                    else
                    {
                        <span class="label-default label label-danger">Ẩn</span>
                    }
                </td>
                <td class="center">
                    <a class="btn btn-success" target="_blank" href="~/Tour/Detail/@item.Id">
                        <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                        Xem
                    </a>
                    <a class="btn btn-info" href="@Url.Action("EditTour","Home", new {id = @item.Id })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    @*<a class="btn btn-danger" href="@Url.Action("DeleteConfirmed", "Home", new
                                                    {
                                                        id = @item.Id
                                                    })">
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>*@
                    <a class="btn btn-primary" href="@Url.Action("DeleteConfirmed","Home", new {id = item.Id })">
                        <i class="glyphicon glyphicon-check icon-white"></i>
                        Cập nhật trạng thái
                    </a>
</td>
            </tr>
}
        </tbody>
    </table>
</div>
