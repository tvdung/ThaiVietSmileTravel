<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - TVL Travel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top: 10px;">
            @Html.Partial("_Head")
        </div>
    </div>
    <div class="container">
        <div class="background-content">
            <div class="row">
                <div class="col-md-12">
                    @{Html.RenderAction("_AdBanner", "Home");}
                    @Html.Partial("_Menu")
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="sub-left-menu">
                        @{ Html.RenderAction("CartInfo", "Home");}
                        @Html.Partial("_Category")
                        @*@Html.Partial("_SpecialTour")*@

                        <div class="cbp-spmenu cbp-spmenu-vertical" style="margin-top: 20px;">
                            <img src="~/Content/img/hotline.png" class="img-responsive" />
                            <script type="text/javascript" src="https://secure.skypeassets.com/i/scom/js/skype-uri.js"></script>
                            @*<div id="SkypeButton_Call_thaivietsmiletravel_1">
                                <script type="text/javascript">
                                    Skype.ui({
                                        "name": "dropdown",
                                        "element": "SkypeButton_Call_thaivietsmiletravel_1",
                                        "participants": ["thaivietsmiletravel"],
                                        "imageSize": 24
                                    });
                                </script>
                            </div>*@
                            <div class='fb-like' data-action='like' data-href='' data-layout='button_count' data-share='true' data-show-faces='false' data-width='520' ></div>
                        </div>
                        <div style="background-color: greenyellow; margin-top: 20px;border-radius: 5px;padding: 15px;height: 50px; margin-bottom: 20px;">
                            <label style="color: blue;"><i class="glyphicon glyphicon-signal blue"></i> @ThaiVietSmileTravel.Globalization.Resource.lblCountVisistor: @ViewBag.LuotTruyCap</label>
                        </div>
                    </div>

                </div>
                <div class="col-md-9">
                    <div class="col-md-12 container-right">
                        <!-- Page Content -->
                        @RenderBody()
                    </div>
                </div>
            </div>

            <!-- Footer -->
            @Html.Partial("_Footer")
        </div>
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
